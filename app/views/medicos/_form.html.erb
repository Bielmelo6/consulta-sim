<%= form_with(model: medico) do |form| %>
  <% if medico.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(medico.errors.count, "error") %> prohibited this medico from being saved:</h2>

      <ul>
        <% medico.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="display: flex; justify-content: center; padding: 5px">
    <%= form.label :name, style: "display: block; margin:0 5px 0 0" %>
    <%= form.text_field :name %>
  </div>

  <div style="display: flex; justify-content: center; padding: 5px">
    <%= form.label :birthday, style: "display: block; margin:0 5px 0 0" %>
    <%= form.date_field :birthday %>
  </div>

  <div style="display: flex; justify-content: center; padding: 5px">
    <%= form.label :cpf, style: "display: block; margin:0 5px 0 0" %>
    <%= form.text_field :cpf %>
  </div>

  <div style="display: flex; justify-content: center; padding: 5px">
    <%= form.label :email, style: "display: block; margin:0 5px 0 0" %>
    <%= form.text_field :email %>
  </div>

  <div style="display: flex; justify-content: center; padding: 5px">
    <%= form.label :crm, style: "display: block; margin:0 5px 0 0" %>
    <%= form.text_field :crm %>
  </div>

  <div style="display: flex; justify-content: center; padding: 5px">
    <%= form.label :speciality, style: "display: block; margin:0 5px 0 0" %>
    <%= form.select(:speciality, %w[Cardiologista Neurologista Ortopedista Ginecologista Urologista Proctologista Dermatologista Oftamologista Oncologista Pediatra Fisiologista Mastologista Geriatra Obstetra])%>
  </div>

  <div style="display: flex; justify-content: center; padding: 5px">
    <%= form.submit %>
  </div>
<% end %>
